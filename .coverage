language: python
python:
  - "3.6"
install:
  - pip install -e . --use-mirrors
before_script:
  - pip install -r test_requirements.txt --use-mirrors
  - git clone https://github.com/clemwek/bucketapp.git
  - cd bucketapp
script:
  - nosetests bucketlistapp/tests --doctest-modules --pep8 coveralls -v --cov coveralls --cov-report term-missing
after_success:
  - coveralls